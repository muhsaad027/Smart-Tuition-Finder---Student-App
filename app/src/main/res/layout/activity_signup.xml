<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saadiqbal.ht_studentmodule.Signup"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#160f29"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/backiconsmall"
            android:layout_marginLeft="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="CREATE A NEW ACCOUNT"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>

<LinearLayout
    android:layout_weight="1.22"
    android:layout_width="match_parent"
    android:background="#160f29"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="STEP 1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#160f29"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="1dp"
        android:text="STEP 2"
        android:layout_weight="1"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        android:layout_weight="0.29"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:maxLength="45"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/usernameicon"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="User Name"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/email"
            android:singleLine="true"
            android:maxLines="1"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="10dp"
            android:maxLength="45"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:hint="User Email"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/password"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Password"
            android:maxLength="25"
            android:password="true"
            android:drawableLeft="@drawable/passwordicon"
            android:drawablePadding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/repassword"
            android:singleLine="true"
            android:maxLines="1"
            android:drawableLeft="@drawable/passwordicon"
            android:drawablePadding="10dp"
            android:password="true"
            android:maxLength="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re Enter Password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/contactno"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:inputType="number"
            android:drawableLeft="@drawable/celicon"
            android:hint="Contact Number"
            android:drawablePadding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:text="NEXT"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginscreenback"
            android:text="Already have Account ?"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:background="#160f29">
    </LinearLayout>

</LinearLayout>
