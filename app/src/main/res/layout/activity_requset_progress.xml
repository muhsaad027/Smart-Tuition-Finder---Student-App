<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.saadiqbal.ht_studentmodule.RequsetProgress">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/arowsent"
    android:layout_gravity="center"
    android:layout_marginTop="160dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Sent"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/contactto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact"
            android:background="#000"
            android:textColor="#fff"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/reqcencel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cencel Request"
            android:background="#FF2000"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
